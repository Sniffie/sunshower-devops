  <repositories>
    <repository>
      <id>sunshower-oss-repo</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
    <repository>
      <id>spring-release</id>
      <url>https://repo.spring.io/libs-release</url>
      <layout>default</layout>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <repository>
      <layout>default</layout>
      <id>spring-snapshots</id>
      <url>https://repo.spring.io/libs-snapshot</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <dependencyManagement>
    <dependencies>


      <dependency>
        <groupId>io.sunshower.env</groupId>
        <artifactId>hal-dependencies</artifactId>
        <version>${env.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>


      <dependency>
        <groupId>io.sunshower.env</groupId>
        <artifactId>common-dependencies</artifactId>
        <version>${env.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>


      <dependency>
        <groupId>io.sunshower.env</groupId>
        <artifactId>persist-dependencies</artifactId>
        <version>${env.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <dependency>
        <groupId>io.sunshower.env</groupId>
        <artifactId>service-dependencies</artifactId>
        <version>${env.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>


      <dependency>
        <groupId>io.sunshower.env</groupId>
        <artifactId>test-dependencies</artifactId>
        <version>${env.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse.jgit</groupId>
        <artifactId>org.eclipse.jgit</artifactId>
        <version>4.9.2.201712150930-r</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.jgit</groupId>
        <artifactId>org.eclipse.jgit.lfs</artifactId>
        <version>4.9.2.201712150930-r</version>
      </dependency>

    </dependencies>
  </dependencyManagement>


</project>
